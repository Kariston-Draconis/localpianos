<h3 class="page-info">Login</h3>

<%= form_tag '/login' do %>

  <p class="textbox-label">Email:</p><p class="textbox-input"><%= text_field_tag :email %></p>
  <p class="textbox-label">Password:</p><p class="textbox-input"><%= password_field_tag :password %></p>
    <p class="submit"><%= submit_tag "Submit" %></p>

<% end %>
